---
import type { ActionButton as ActionButtonProps, ActionLink as ActionLinkProps } from 'types';
import ActionButton from '@components/ActionButton.astro';
import ActionLink from '@components/ActionLink.astro';

interface Props {
    action: ActionButtonProps | ActionLinkProps;
    class?: string;
    'data-sb-field-path'?: string;
}

const { action, class: className, 'data-sb-field-path': fieldPath } = Astro.props;

const componentMap = {
    actionButton: ActionButton,
    actionLink: ActionLink
};
const Component = componentMap[action._type];
---

<Component {...action} class={className} data-sb-field-path={fieldPath} />
